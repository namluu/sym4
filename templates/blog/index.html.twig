{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}

{% block main %}
    {% for post in posts %}
        <article class="post">
            <h2>
                <a href="{{ path('blog_post', {slug: post.slug}) }}">{{ post.title }}</a>
            </h2>
        </article>
    {% else %}
        <div class="well">{{ 'No posts found'|trans }}</div>
    {% endfor %}
{% endblock %}